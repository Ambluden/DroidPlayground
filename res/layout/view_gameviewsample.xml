<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <view
        android:id="@+id/gameView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        class="com.luksprog.playground.view.GameViewSample$GameView" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/buttonUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="Up" />

        <Button
            android:id="@+id/buttonLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/buttonRight"
            android:layout_below="@id/buttonUp"
            android:layout_toLeftOf="@id/buttonUp"
            android:text="Left" />

        <Button
            android:id="@id/buttonRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/buttonUp"
            android:layout_toRightOf="@id/buttonUp"
            android:text="Right" />

        <Button
            android:id="@+id/buttonDown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/buttonUp"            
            android:layout_alignRight="@id/buttonUp"
            android:layout_below="@id/buttonUp"
            android:layout_centerHorizontal="true"
            android:text="Down" />
    </RelativeLayout>

</LinearLayout>